{
  "extends": "../../tsconfig.base.json",
  "include": [
    "./infra/**/*.ts",
    "./src/**/*.ts",
    "./src/**/*.tsx",
    ".next/types/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "public"
  ],
  "compilerOptions": {
    "types": [
      "@types/node",
      "@cloudflare/workers-types",
      "./types/env.d.ts",
      "./types/next-env.d.ts"
    ],
    "baseUrl": "./",
    "rootDir": "./",
    "paths": {
      "#/infra/*": [
        "./infra/*"
      ],
      "#/*": [
        "./src/*"
      ]
    },
    "outDir": "./dist",
    "tsBuildInfoFile": "./dist/tsconfig.tsbuildinfo",
    "jsx": "preserve",
    "allowJs": true,
    "incremental": true,
    "module": "esnext",
    "esModuleInterop": true,
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "references": [
    {
      "path": "../common"
    },
    {
      "path": "../api"
    }
  ]
}
