{
  "extends": "../../tsconfig.base.json",
  "include": [
    "./src/**/*.ts",
    "./src/**/*.tsx",
    "./types/**/*.d.ts" // Including custom type definition files
  ],
  "exclude": [
    "node_modules",
    "dist", // Standard practice to exclude build output
    "public" // If it contains static assets not part of TS compilation
  ],
  "compilerOptions": {
    // Inherited: composite, declaration, declarationMap, module, moduleResolution, target, lib, strict, etc.

    // Overrides and additions for app package:
    "noEmit": false, // Must not disable emit for referenced projects
    "types": [
      "@cloudflare/workers-types",
      "./types/env.d.ts",
      "./types/rw.d.ts",
      "./types/vite.d.ts"
    ],
    "baseUrl": "./src",
    "rootDir": "./src",
    "paths": {
      "@/*": ["./*"]
    },
    "outDir": "../../dist/packages/app",
    "tsBuildInfoFile": "../../dist/packages/app/tsconfig.tsbuildinfo",
    "jsx": "react-jsx" // Keep if using React JSX
  },
  "references": [
    { "path": "../api" },
    { "path": "../infra" },
    { "path": "../common" }
  ]
}
