{
  "extends": "../../tsconfig.base.json",
  "include": [
    "./src/**/*.ts",
    "./src/**/*.tsx",
    "./infra/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "public"
  ],
  "compilerOptions": {
    "types": [
      "@types/node",
      "@cloudflare/workers-types",
      "./types/env.d.ts",
      "./types/next-env.d.ts"
    ],
    "baseUrl": "./",
    "rootDir": "./",
    "paths": {
      "#/infra/*": ["./infra/*"],
      "#/*": ["./src/*"]
    },
    "outDir": "./dist",
    "tsBuildInfoFile": "./dist/tsconfig.tsbuildinfo",
    "jsx": "react-jsx"
  },
  "references": [
    { "path": "../common" },
    { "path": "../api" }
  ]
}
