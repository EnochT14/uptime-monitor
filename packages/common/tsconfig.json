{
  "extends": "../../tsconfig.base.json",
  "include": [
    "./src/**/*.ts",
    "./src/**/*.tsx",
  ],
  "exclude": [
    "node_modules"
  ],
  "compilerOptions": {
    // Specify type package names to be included without being referenced in a source file.
    "types": [
      "@types/node",
      "@cloudflare/workers-types",
      "./types/env.d.ts",
    ],
    "baseUrl": "./",
    "rootDir": "./src",
    "paths": {
      "@/*": ["./src/*"],
    },

    "outDir": "../../dist/packages/common",
    "tsBuildInfoFile": "../../dist/packages/common/tsconfig.tsbuildinfo"
  },
}
