{
  "extends": "../../tsconfig.base.json",
  "include": [
    "./src/**/*.ts",
    "./src/**/*.tsx",
    "./infra/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ],
  "compilerOptions": {
    "types": [
      "@types/node",
      "@cloudflare/workers-types"
    ],
    "baseUrl": "./",
    "rootDir": "./",
    "paths": {
      "#/*": ["./src/*"],
      "#/infra/*": ["./infra/*"]
    },
    "outDir": "./dist",
    "tsBuildInfoFile": "./dist/tsconfig.tsbuildinfo"
  }
}
