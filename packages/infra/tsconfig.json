{
  "extends": "../../tsconfig.base.json",
  "include": [
    "./src/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ],
  "compilerOptions": {
    "types": [
      "@types/node",
      "@cloudflare/workers-types"
    ],
    "baseUrl": "./",
    "rootDir": "./src",
    "paths": {
      "#/*": ["./src/*"]
    },
    "outDir": "../../dist/packages/infra",
    "tsBuildInfoFile": "../../dist/packages/infra/tsconfig.tsbuildinfo",

    "noEmit": false
  },
  "references": [
    { "path": "../api" }
  ]
}
