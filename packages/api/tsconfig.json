{
  "extends": "../../tsconfig.base.json",
  "include": [
    "./src/**/*.ts",
    "./src/**/*.tsx",
  ],
  "exclude": [
    "node_modules"
  ],
  "compilerOptions": {
    // Specify type package names to be included without being referenced in a source file.
    "types": [
      "@types/node",
      "@cloudflare/workers-types",
    ],
    "baseUrl": "./",
    "rootDir": "./src",
    "paths": {
      "@/*": ["./src/*"],
    },

    "outDir": "../../dist/packages/api",
    "tsBuildInfoFile": "../../dist/packages/api/tsconfig.tsbuildinfo"
  },
  "references": [
    { "path": "../infra" },
    { "path": "../api" },
    { "path": "../app" },
  ]
}
