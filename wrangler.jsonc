// https://developers.cloudflare.com/workers/wrangler/configuration/
{
  "$schema": "node_modules/wrangler/config-schema.json",
  "name": "uptime-monitor",
  "main": ".open-next/worker.js",
  // https://developers.cloudflare.com/workers/configuration/compatibility-flags/#flags-history
  "compatibility_date": "2025-04-01",
  "compatibility_flags": ["nodejs_compat"],
  "workers_dev": true,
  "minify": true,
  "observability": {
    "enabled": true
  },
  "vars": {
    "APP_ENV": "development"
  },
  "assets": {
    "binding": "ASSETS",
    "directory": ".open-next/assets"
  },
  "d1_databases": [
    {
      "binding": "DB",
      "database_name": "uptime-monitor-local",
      "database_id": "uptime-monitor-local",
      "migrations_dir": "src/db/migrations"
    }
  ],
  "services": [
    {
      "binding": "MONITOR_EXEC",
      "service": "monitor-exec"
    },
    {
      "binding": "MONITOR_EXEC_SYNTHETIC",
      "service": "monitor-exec-synthetic"
    },
    {
      "binding": "MONITOR_TRIGGER_RPC",
      "service": "monitor-trigger"
    }
  ],
  "durable_objects": {
    "bindings": [
      {
        "name": "MONITOR_TRIGGER",
        "class_name": "MonitorTrigger",
        "script_name": "api"
      }
    ]
  },
  "r2_buckets": [
    {
      "binding": "SYNTHETIC_SCRIPTS",
      "bucket_name": "synthetic-scripts-local"
    }
  ],
  "env": {
    "production": {
      "routes": [
        {
          "pattern": "UPDATE_ME_PROD_FQDN",
          "custom_domain": true
        }
      ],
      "vars": {
        "APP_ENV": "production"
      },
      "d1_databases": [
        {
          "binding": "DB",
          "database_name": "uptime-monitor-prod",
          "database_id": "UPDATE_ME_D1_ID",
          "migrations_dir": "src/db/migrations"
        }
      ],
      "services": [
        {
          "binding": "MONITOR_EXEC",
          "service": "monitor-exec-production"
        },
        {
          "binding": "MONITOR_EXEC_SYNTHETIC",
          "service": "monitor-exec-synthetic-production"
        },
        {
          "binding": "MONITOR_TRIGGER_RPC",
          "service": "monitor-trigger-production"
        }
      ],
      "durable_objects": {
        "bindings": [
          {
            "name": "MONITOR_TRIGGER",
            "class_name": "MonitorTrigger",
            "script_name": "monitor-trigger-production"
          }
        ]
      },
      "r2_buckets": [
        {
          "binding": "SYNTHETIC_SCRIPTS",
          "bucket_name": "synthetic-scripts-production"
        }
      ]
    }
  }
}
