{
  "name": "@solstatus/solstatus",
  "version": "2.0.0",
  "private": true,
  "type": "module",
  "packageManager": "pnpm@10.11.1",
  "scripts": {
    "preinstall": "npx only-allow pnpm",
    "dev": "concurrently --kill-others --names \"API,APP\" --prefix-colors \"bgWhite,bgWhiteBright\" \"pnpm dev:api\" \"wait-on http://localhost:8788 && pnpm dev:app\"",
    "dev:app": "next dev",
    "dev:api": "concurrently --kill-others --names \"EXEC,TRGR\" --prefix-colors \"blue,magenta\" \"pnpm dev:api-exec\" \"wait-on http://localhost:8787 && pnpm dev:api-trigger\"",
    "dev:api-exec": "wrangler dev --persist-to=../.wrangler/state --cwd api -c wrangler-monitor-exec.jsonc --port 8787",
    "dev:api-trigger": "wrangler dev --persist-to=../.wrangler/state --cwd api -c wrangler-monitor-trigger.jsonc --port 8788",
    "db:create": "wrangler d1 execute solstatus-local --local --command='SELECT 1'",
    "db:create:prod": "wrangler d1 create solstatus-prod",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "wrangler d1 migrations apply DB --local",
    "db:migrate:prod": "wrangler d1 migrations apply DB --env production --remote",
    "db:seed": "tsx test/seed.ts",
    "db:setup": "pnpm run db:create && pnpm run db:generate && pnpm run db:migrate && pnpm run db:seed",
    "db:studio": "drizzle-kit studio",
    "db:studio:prod": "APP_ENV=production drizzle-kit studio",
    "deploy": "pnpm deploy:api && pnpm deploy:app",
    "deploy:app": "pnpm build:opennextjs && wrangler deploy --env production",
    "deploy:api": "pnpm deploy:api-exec && pnpm deploy:api-trigger",
    "deploy:api-exec": "wrangler deploy --cwd api --env production -c wrangler-monitor-exec.jsonc",
    "deploy:api-trigger": "wrangler deploy --cwd api --env production -c wrangler-monitor-trigger.jsonc",
    "format": "biome check . --write",
    "clean": "rm -rf ./node_modules/ ./packages/*/node_modules/ ./dist/ ./packages/*/dist/",
    "clean:builds": "rm -rf ./dist/ ./packages/*/dist/",
    "types": "tsc --build --emitDeclarationOnly",
    "build:types": "bun run --filter '@solstatus/common' types && bun run --filter '@solstatus/api' types && bun run --filter '@solstatus/app' types && bun run --filter '@solstatus/infra' types"
  }
}
